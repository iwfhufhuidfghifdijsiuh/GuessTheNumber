<Window x:Class="GuessTheNumber.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GuessTheNumber"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Icon="/IMG/valuta.ico">

    <Grid>
        <TextBox Name="InputNumber" Width="100" Height="30" Margin="0,95,0,0" VerticalAlignment="Top" HorizontalAlignment="Center"/>
        <Button Name="CheckButton" Content="Проверить" Width="100" Height="30" Margin="10" VerticalAlignment="Top" HorizontalAlignment="Left" Click="CheckButton_Click"/>
        <Button Name="RestartButton" Content="Начать заново" Width="100" Height="30" Margin="10" VerticalAlignment="Top" HorizontalAlignment="Right" Click="RestartButton_Click"/>

        <TextBlock Name="HintTextBlock" Width="250" Height="104" VerticalAlignment="Center" HorizontalAlignment="Center"/>

        <ListBox Name="AttemptsListBox" Width="250" Height="100" Margin="10,80,10,10"/>

        <TextBlock Name="AttemptsCounterTextBlock" Width="250" Margin="0,307,0,79" HorizontalAlignment="Center"/>
    </Grid>
</Window>
